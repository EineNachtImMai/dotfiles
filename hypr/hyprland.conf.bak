monitor=eDP-1,1920x1080@60,0x0,1

$terminal = kitty
$fileManager = thunar
$browser = zen
$menu = wofi --show=drun -I
$help = /home/blackstar/.config/hypr/scripts/hints.sh

exec-once = hyprpaper
exec-once = waybar
exec-once = hyprctl setcursor catppuccin-mocha-dark-cursors 24

# For all categories, see https://wiki.hyprland.org/Configuring/Variables/
input {
    kb_layout =fr
    kb_variant =
    kb_model =
    kb_options =
    kb_rules =
    numlock_by_default = true
    follow_mouse = 1
    touchpad {
        natural_scroll = yes
    }
    sensitivity = 0 # -1.0 - 1.0, 0 means no modification.
}

general {
    gaps_in = 5
    gaps_out = 20
    border_size = 2
    col.active_border = rgba(f88379ee) # rgba(f88379ee) 45deg
    col.inactive_border = rgba(595959aa)
    layout = dwindle
    allow_tearing = false
}

decoration {
    rounding = 10
    
    blur {
        enabled = true
        size = 3
        passes = 1
    }
}

animations {
    enabled = yes
    bezier = myBezier, 0.05, 0.9, 0.1, 1.05
    animation = windows, 1, 7, myBezier
    animation = windowsOut, 1, 7, default, popin 80%
    animation = border, 1, 10, default
    animation = borderangle, 1, 8, default
    animation = fade, 1, 7, default
    animation = workspaces, 1, 6, default
}  

dwindle {
    pseudotile = yes # master switch for pseudotiling. Enabling is bound to mainMod + P in the keybinds section below
    preserve_split = yes # you probably want this
}

gestures {
    workspace_swipe = on
}

misc {
    force_default_wallpaper = -1 # Set to 0 to disable the anime mascot wallpapers
}
windowrule = noborder, wofi
windowrule = noshadow, wofi

$mainMod = SUPER

bind = $mainMod, Q, exec, $terminal # Ouvre le terminal
bind = $mainMod SHIFT, COMMA, exec, $help # Ouvre cette fenetre d'aide
bind = $mainMod, C, killactive # Ferme la feentre actuelle
bind = $mainMod, E, exec, $fileManager # Ouvre l'explorateur de fichiers
bind = $mainMod, V, togglefloating # Alterne entre fentre flottante et grand cran
bind = $mainMod, R, exec, $menu # Ouvre l'outil pour chercher des programmes
bind = $mainMod, J, togglesplit # Alterne entre sparation verticale et horizontale des fentres
bind = $mainMod, B, exec, $browser # Ouvre firefox
bind = $mainMod ALT, left, workspace, -1 # Bureau prdent 
bind = $mainMod ALT, right, workspace, +1 # Bureau suivant
bind = $mainMod, X, exec, grim -l 0 -g "$(slurp)" - | wl-copy # Capture d'cran (slectionner une  partie de l'cran)

bind = $mainMod, left, movefocus, l # slectionne la fentre  gauche
bind = $mainMod, right, movefocus, r # slectionne la fentre  droite
bind = $mainMod, up, movefocus, u # slectionne la fentre en haut
bind = $mainMod, down, movefocus, d # slectionne la fentre en bas

bind = $mainMod, 1, workspace, 1 # Saute au bureau numro 1
bind = $mainMod, 2, workspace, 2 # Saute au bureau numro 2
bind = $mainMod, 3, workspace, 3 # Saute au bureau numro 3
bind = $mainMod, 4, workspace, 4 # Saute au bureau numro 4
bind = $mainMod, 5, workspace, 5 # Saute au bureau numro 5
bind = $mainMod, 6, workspace, 6 # Saute au bureau numro 6
bind = $mainMod, 7, workspace, 7 # Saute au bureau numro 7
bind = $mainMod, 8, workspace, 8 # Saute au bureau numro 8
bind = $mainMod, 9, workspace, 9 # Saute au bureau numro 9
bind = $mainMod, 0, workspace, 10 # Saute au bureau numro 10

bind = $mainMod SHIFT, 1, movetoworkspace, 1 # Dplace la fentre au bureau numro 1
bind = $mainMod SHIFT, 2, movetoworkspace, 2 # Dplace la fentre au bureau numro 2
bind = $mainMod SHIFT, 3, movetoworkspace, 3 # Dplace la fentre au bureau numro 3
bind = $mainMod SHIFT, 4, movetoworkspace, 4 # Dplace la fentre au bureau numro 4
bind = $mainMod SHIFT, 5, movetoworkspace, 5 # Dplace la fentre au bureau numro 5
bind = $mainMod SHIFT, 6, movetoworkspace, 6 # Dplace la fentre au bureau numro 6
bind = $mainMod SHIFT, 7, movetoworkspace, 7 # Dplace la fentre au bureau numro 7
bind = $mainMod SHIFT, 8, movetoworkspace, 8 # Dplace la fentre au bureau numro 8
bind = $mainMod SHIFT, 9, movetoworkspace, 9 # Dplace la fentre au bureau numro 9
bind = $mainMod SHIFT, 0, movetoworkspace, 10 # Dplace la fentre au bureau numro 10

bind = $mainMod, A, exec, wlogout # Menu pour dconnecter / teindre / verrouiller

bind = $mainMod, S, togglespecialworkspace, magic # Bureau magique (se met par dessus le reste)
bind = $mainMod SHIFT, S, movetoworkspace, special:magic # Dplacer vers le bureau magique

bind = $mainMod SHIFT CTRL, right, movetoworkspace, e+1 # Dplace la fentre vers le bureau prdent
bind = $mainMod SHIFT CTRL, left, movetoworkspace, e-1 # Dplace la fentre vers le bureau prdent
bind = $mainMod SHIFT, left, movewindow, l # Dplace la fentre vers la gauche
bind = $mainMod SHIFT, right, movewindow, r # Dplace la fentre vers la droite
bind = $mainMod SHIFT, up, movewindow, u # Dplace la fentre vers le haut
bind = $mainMod SHIFT, down, movewindow, d # Dplace la fentre vers le bas
bind = $mainMod CTRL, left, resizeactive, -20 0 # Elargit la fentre vers la gauche
bind = $mainMod CTRL, right, resizeactive, 20 0 # Elargit la fentre vers la droite
bind = $mainMod CTRL, up, resizeactive, 0 -20 # Elargit la fentre vers le haut
bind = $mainMod CTRL, down, resizeactive, 0 20 # Elargit la fentre vers le bas

bindm = $mainMod, mouse:272, movewindow # Dplace la fentre avec la souris
bindm = $mainMod, mouse:273, resizewindow # Elargit la fentre avec la souris

